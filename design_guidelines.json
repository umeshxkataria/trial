{
  "typography": {
    "font_family": {
      "headings": "Outfit, sans-serif",
      "body": "DM Sans, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "weights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "sizes": {
      "h1": "text-5xl md:text-6xl lg:text-7xl tracking-tight font-bold",
      "h2": "text-4xl md:text-5xl tracking-tight font-semibold",
      "h3": "text-2xl md:text-3xl font-semibold",
      "body_lg": "text-lg leading-relaxed",
      "body_base": "text-base leading-relaxed",
      "caption": "text-sm text-muted-foreground"
    }
  },
  "colors": {
    "theme": "light",
    "palette": {
      "primary": {
        "DEFAULT": "#4F46E5",
        "foreground": "#FFFFFF",
        "hover": "#4338CA"
      },
      "secondary": {
        "DEFAULT": "#10B981",
        "foreground": "#FFFFFF",
        "hover": "#059669"
      },
      "background": {
        "DEFAULT": "#F8FAFC",
        "paper": "#FFFFFF",
        "subtle": "#F1F5F9"
      },
      "text": {
        "primary": "#0F172A",
        "secondary": "#64748B",
        "muted": "#94A3B8"
      },
      "border": {
        "DEFAULT": "#E2E8F0",
        "focus": "#4F46E5"
      },
      "accent": {
        "purple": "#8B5CF6",
        "blue": "#3B82F6",
        "orange": "#F97316"
      }
    },
    "gradients": {
      "hero": "bg-gradient-to-br from-indigo-50 via-white to-emerald-50",
      "primary_btn": "bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-700 hover:to-violet-700",
      "glass": "bg-white/70 backdrop-blur-xl border border-white/20 shadow-sm"
    }
  },
  "layout": {
    "container": {
      "max_width": "max-w-7xl mx-auto",
      "padding": "px-4 sm:px-6 lg:px-8"
    },
    "spacing": {
      "section_gap": "py-20 md:py-32",
      "element_gap": "gap-6 md:gap-8",
      "internal_padding": "p-6 md:p-8"
    },
    "grid_systems": {
      "bento_dashboard": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
      "features": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12",
      "hero_split": "grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
    },
    "radius": {
      "default": "rounded-xl",
      "card": "rounded-2xl",
      "button": "rounded-full"
    }
  },
  "components": {
    "buttons": {
      "primary": "h-11 px-8 rounded-full bg-primary text-primary-foreground hover:bg-primary/90 transition-all shadow-lg shadow-indigo-500/20 font-medium",
      "secondary": "h-11 px-8 rounded-full bg-white text-slate-900 border border-slate-200 hover:bg-slate-50 transition-all font-medium",
      "ghost": "h-11 px-6 rounded-full hover:bg-slate-100 text-slate-600 hover:text-slate-900 transition-all"
    },
    "cards": {
      "base": "bg-white rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-all duration-300",
      "glass": "bg-white/80 backdrop-blur-md border border-white/50 shadow-sm",
      "interactive": "cursor-pointer hover:-translate-y-1 hover:shadow-xl transition-all duration-300"
    },
    "inputs": {
      "default": "h-11 rounded-lg border-slate-200 bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all"
    },
    "badges": {
      "success": "bg-emerald-50 text-emerald-700 border-emerald-100",
      "warning": "bg-amber-50 text-amber-700 border-amber-100",
      "neutral": "bg-slate-100 text-slate-600 border-slate-200"
    }
  },
  "assets": {
    "images": {
      "hero_main": {
        "url": "https://images.unsplash.com/photo-1758518731468-98e90ffd7430?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDQ2NDF8MHwxfHNlYXJjaHwxfHxkaXZlcnNlJTIwcHJvZmVzc2lvbmFscyUyMG9mZmljZSUyMG1lZXRpbmd8ZW58MHx8fHwxNzcwNjE1NTU2fDA&ixlib=rb-4.1.0&q=85",
        "alt": "Diverse team of professionals in a modern office",
        "usage": "Landing page hero section, right side"
      },
      "ai_visualization": {
        "url": "https://images.unsplash.com/photo-1762279389002-7b6abd7bd6c6?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1NzZ8MHwxfHNlYXJjaHwxfHxhYnN0cmFjdCUyMHRlY2hub2xvZ3klMjBuZXR3b3JrJTIwY29ubmVjdGlvbnxlbnwwfHx8fDE3NzA2MTU1NjB8MA&ixlib=rb-4.1.0&q=85",
        "alt": "Abstract data visualization",
        "usage": "Background for 'How AI Matching Works' section or feature card"
      },
      "tech_bg": {
        "url": "https://images.unsplash.com/photo-1644088379091-d574269d422f?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1NzZ8MHwxfHNlYXJjaHwyfHxhYnN0cmFjdCUyMHRlY2hub2xvZ3klMjBuZXR3b3JrJTIwY29ubmVjdGlvbnxlbnwwfHx8fDE3NzA2MTU1NjB8MA&ixlib=rb-4.1.0&q=85",
        "alt": "Plexus network connection",
        "usage": "Subtle overlay for dark sections or footer background"
      },
      "testimonial_avatar": {
        "url": "https://images.unsplash.com/photo-1758691737182-d42aefd6dee8?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDQ2NDF8MHwxfHNlYXJjaHwyfHxkaXZlcnNlJTIwcHJvZmVzc2lvbmFscyUyMG9mZmljZSUyMG1lZXRpbmd8ZW58MHx8fHwxNzcwNjE1NTU2fDA&ixlib=rb-4.1.0&q=85",
        "alt": "Professional woman back view",
        "usage": "Testimonial section or 'For Employers' card"
      }
    },
    "icons": {
      "library": "lucide-react",
      "style": "stroke-width={1.5} className='w-5 h-5'"
    }
  },
  "motion": {
    "transitions": {
      "default": "transition-all duration-300 ease-in-out",
      "slow": "transition-all duration-500 ease-out"
    },
    "animations": {
      "fade_in": "animate-in fade-in duration-500",
      "slide_up": "animate-in slide-in-from-bottom-4 duration-500",
      "hover_lift": "hover:-translate-y-1 hover:shadow-lg transition-transform duration-300"
    }
  },
  "universal_guidelines": {
    "design_philosophy": "Fusion over Imitation. Mix professional trust with AI-driven futurism.",
    "anti_patterns": [
      "Do not use generic 'Inter' for headings.",
      "Do not use full-screen gradients.",
      "Do not center everything.",
      "Do not use 'SaaS Blue' as the only color."
    ],
    "accessibility": {
      "contrast": "Ensure 4.5:1 contrast ratio for text.",
      "focus": "Visible focus rings on all interactive elements.",
      "aria": "Use aria-labels for icon-only buttons."
    },
    "testing": {
      "attribute": "data-testid",
      "format": "kebab-case (e.g., 'submit-application-btn')"
    }
  },
  "instructions_to_main_agent": {
    "setup": "Install 'lucide-react' and 'recharts' if not present. Use 'clsx' and 'tailwind-merge' for class handling.",
    "components": "Use existing Shadcn components in /components/ui but override styles via className to match the 'components' section above.",
    "pages": {
      "landing": "Use the 'hero_split' grid. Use 'hero_main' image. Add a 'How it Works' section with 'ai_visualization'.",
      "dashboard": "Use 'bento_dashboard' grid. Create a sidebar layout. Use 'cards.base' for widgets.",
      "job_detail": "Use a clean, readable layout with 'body_lg' for description. Sticky apply button on mobile."
    }
  }
}